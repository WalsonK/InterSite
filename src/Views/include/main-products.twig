<main>
    <h1 class="block pl-2">Produits</h1>
    <!-- Options block -->
    <div class="card optionsBlock">
        <div class="card-body">
            <div class="row">
                <h5 class="card-title pl-2">Tous ({{ nbs }})</h5>
                <form class="form-inline my-2 my-lg-0 searchBar">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-primary my-2 my-sm-0" type="submit" disabled>Search</button>
                </form>
            </div><br>



            <button class="btn btn-primary btn-sm btnSetting">Ajouter un produit</button>
            <button class="btn btn-primary btn-sm btnSetting" disabled>Modifier le produit</button>
            <button class="btn btn-primary btn-sm btnSetting" disabled>Supprimer le produit</button>
        </div>
    </div>

    <!-- Tableaux -->
    <div class="card cardTable">
        <div class="card-body">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Quantit√©s</th>
                        <th scope="col">Date</th>
                    </tr>
                </thead>
                <tbody>
                    {% for product in products %}
                        <tr>
                            <th scope="row"><input type="checkbox" class="form-check-input" id="{{ user.id}}"></th>
                            <td>{{ product.img}}</td>
                            <td>{{ product.nom}}</td>
                            <td>{{ product.date}}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

</main>